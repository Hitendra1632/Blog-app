 <p id="notice"><%= notice %></p>

 <h2> <a href=""><%= @post.title %> </h2></a>
<p> <%= @post.body %> </p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<h3>Comments</h3>
<%= render :partial => @post.comments %>

<h4>Leave a Comment? </h4>

<%= form_for([@post,@post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :name %><br />
		<%=f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%=f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%=f.text_field :body %>
	</div>
	<p><%= f.submit %></p>
<% end %>




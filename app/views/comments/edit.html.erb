<h1>Editing comment</h1>

<%=form_for([:post,@comment]) do |F| %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_field :body %>
	</div>
	<p><%= f.submit %></p>
<% end %>